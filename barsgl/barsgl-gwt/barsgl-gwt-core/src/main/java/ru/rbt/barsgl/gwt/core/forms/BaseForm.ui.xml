<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .title {
        font-family: Verdana, sans-serif;
        color: #FFFFFF;
        font-weight: bold;
        font-size: 16px;
        text-align: center;
        padding: 5px 0;
        background-color: #323B38;
        }
    </ui:style>

    <g:DockLayoutPanel unit="MM">
        <g:north size="10">
            <g:FlowPanel>
                <g:Label ui:field="title" addStyleNames="{style.title}"/>
            </g:FlowPanel>
        </g:north>
        <g:center>
            <g:DockLayoutPanel ui:field="form"/>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>